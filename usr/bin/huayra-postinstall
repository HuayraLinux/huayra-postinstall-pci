#!/bin/bash

scripts=$(dirname $(readlink -f $0))

usage() { echo "Usage: $0 -r | -t" 1>&2; exit 1; }

cmd=""
while getopts ":rt" o; do
    case "${o}" in
    	r)
            echo "run"
	    cmd="run"
            ;;
        t)
            echo "test"
	    cmd="test"
            ;;
	*)
            usage
            ;;
    esac
done
if [ -z "$cmd" ] ; then
    usage
fi
shift $((OPTIND-1))
run-parts --report --exit-on-error $scripts/../share/huayra-postinstall-pci/2014.d -a $cmd
